%%% Course Commands

\newtotcounter{hampevalcount}
\newtotcounter{wpicreditcount}

\newcommand{\courseself}[0]{\subsection*{Self Evaluation}}
\newcommand{\coursedesc}[0]{\subsection*{Course Description}}
\newcommand{\coursegrade}[1]{\subsection*{Grade: #1}\stepcounter{wpicreditcount}}

\makeatletter

\newcommand{\crsshorthand}[2]{ \if\relax\detokenize{#1}\relax#2\else#1\fi }

\newcommand{\crscatindex}[2]{ \index{coursecat}{#1!#2} }

\newcommand{\crstermindex}[2]{
    \def\@term{\csname Term#1\endcsname}
    \index{courseterm}{\@term!#2}
}

\newcommand{\courseeval}[6][]{
    \stepcounter{hampevalcount}
    \def\@label{#6}
    \def\@name{\crsshorthand{#1}{#4}}

    \subsection*{Evaluation: #2 (#3)\\#4}
    \ifx\@label\@empty\relax\else\label{sec:eval:hamp:#6}\fi
    \crscatindex{#5}{\@name}
    \crstermindex{#3}{\@name}
}

\makeatother
